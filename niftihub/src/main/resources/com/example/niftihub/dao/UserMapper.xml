<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.niftihub.dao.UserMapper">
    <!--    -->
    <insert id="addUser" parameterType="com.example.niftihub.pojo.data.UserDO">
        insert into niftiihub.user_info (username, password)
        values (#{username},#{username});
    </insert>

    <select id="selectUserInfo" parameterType="int" resultType="com.example.niftihub.pojo.data.UserDO">
        select * from niftiihub.user_info where uid=#{uid};
    </select>

    <update id="updateUserInfo" parameterType="com.example.niftihub.pojo.data.UserDO">

        update niftiihub.user_info
        <set>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="profileP != null">
                profileP = #{profileP},
            </if>
            <if test="password != null">
                password = #{password},
            </if>

        </set>

        <where >
            uid=#{uid};
        </where>

    </update>
    <delete id="deleteUser" parameterType="int">
        delete from niftiihub.user_info where uid=#{uid} ;
    </delete>

</mapper>